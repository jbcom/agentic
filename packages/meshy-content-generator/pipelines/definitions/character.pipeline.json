{
  "name": "character",
  "description": "Character pipeline: concept → multi-image-to-3d → rigging → animations",
  "version": "2.1.0",
  "steps": [
    {
      "id": "concept",
      "task": "text-to-image",
      "inputs": [
        {
          "name": "prompt",
          "source": "manifest",
          "path": "textToImageTask.prompt"
        },
        {
          "name": "ai_model",
          "source": "literal",
          "value": "nano-banana-pro"
        },
        {
          "name": "generate_multi_view",
          "source": "manifest",
          "path": "textToImageTask.generateMultiView",
          "default": true
        },
        {
          "name": "pose_mode",
          "source": "manifest",
          "path": "textToImageTask.poseMode",
          "default": "a-pose"
        }
      ]
    },
    {
      "id": "model",
      "task": "multi-image-to-3d",
      "dependsOn": ["concept"],
      "inputs": [
        {
          "name": "image_urls",
          "source": "step",
          "step": "concept",
          "path": "images"
        }
      ]
    },
    {
      "id": "rigging",
      "task": "rigging",
      "dependsOn": ["model"],
      "inputs": [
        {
          "name": "input_task_id",
          "source": "step",
          "step": "model",
          "path": "taskId"
        },
        {
          "name": "texture_image_url",
          "source": "step",
          "step": "model",
          "path": "textureUrl"
        }
      ]
    },
    {
      "id": "animations",
      "task": "animation",
      "dependsOn": ["rigging"],
      "forEach": {
        "source": "manifest",
        "path": "animationTask.animations",
        "as": "animationName"
      },
      "inputs": [
        {
          "name": "rig_task_id",
          "source": "step",
          "step": "rigging",
          "path": "taskId"
        }
      ]
    }
  ]
}

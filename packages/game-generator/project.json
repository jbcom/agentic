{
  "name": "game-generator",
  "tags": ["lang:rs", "scope:game"],
  "targets": {
    "build": {
      "command": "cargo build -p game-generator",
      "inputs": ["{projectRoot}/src/**/*.rs", "{projectRoot}/Cargo.toml"]
    },
    "test": {
      "command": "cargo test -p game-generator",
      "inputs": ["{projectRoot}/src/**/*.rs", "{projectRoot}/Cargo.toml"]
    },
    "lint": {
      "command": "cargo clippy -p game-generator -- -D warnings",
      "inputs": ["{projectRoot}/src/**/*.rs", "{projectRoot}/Cargo.toml"]
    }
  }
}
